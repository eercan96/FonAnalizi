@model IEnumerable<Category>

<h2>Kategori Listesi</h2>
    <a href="/Category/Create" class="btn btn-success">Kategori Ekle</a>
    <hr>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m=>m.CategoryId)</th>
            <th>@Html.DisplayNameFor(m=>m.Title)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
            
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">Details</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>