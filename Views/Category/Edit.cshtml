@model Category
    
<h2>Kategori Güncelle</h2>
<hr>

<div class="row">
<div class="col-8">

<form asp-controller="Category" asp-action="edit" method="post">
    <input type="hidden" asp-for="CategoryId">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Kategori Adı</label>
        <input asp-for="Title" class="form-control">
    </div>
    
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
</div>
    <div class="col-4">
        <h4>Fonlar</h4>
        <hr>
        <ul>
            @foreach(var item in @Model.CategorySaves){
                <li>@item.Fon.FonName</li>
            }
        </ul>

    </div>
</div>